@using PROG6212_POE.Models.Entities
@model List<Invoice>
@{
    ViewData["Title"] = "Invoices";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Generated Invoices</h1>
    <div>
        <a asp-controller="Claims" asp-action="Index" class="btn btn-outline-secondary">Back to Claims</a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-file-invoice me-2"></i>All Invoices</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Invoice Number</th>
                            <th>Claim ID</th>
                            <th>Generated Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@invoice.InvoiceNumber</strong>
                                </td>
                                <td>#@invoice.ClaimId</td>
                                <td>@invoice.GeneratedDate.ToString("dd MMM yyyy HH:mm")</td>
                                <td class="text-success fw-bold">R @invoice.Amount.ToString("N2")</td>
                                <td>
                                    <span class="badge bg-success">@invoice.Status</span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    <a asp-action="Download" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-download me-1"></i>Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-4">
                <i class="fas fa-file-invoice fa-3x mb-3"></i>
                <h5>No Invoices Generated</h5>
                <p>Invoices are automatically generated when claims are approved, or you can generate them manually.</p>
                <a asp-controller="Claims" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-list me-1"></i>View Claims
                </a>
            </div>
        }
    </div>
</div>