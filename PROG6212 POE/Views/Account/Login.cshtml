@model LoginViewModel
@using PROG6212_POE.Models.Entities

@{
    ViewData["Title"] = "Login - Contract Monthly Claim System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 40px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

        .demo-logins {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .demo-btn {
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="text-center mb-4">
                <i class="fas fa-file-invoice-dollar fa-3x text-primary mb-3"></i>
                <h2>Contract Monthly Claim System</h2>
                <p class="text-muted">Please login to continue</p>
            </div>

            <!-- Error Messages -->
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    <h5>Login Failed</h5>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- REMOVED: Role selection from login form -->
                <!-- The role will be determined by the user's actual role in the system -->

                <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>
            </form>

            <!-- Demo Login Buttons -->
            <div class="demo-logins">
                <h6 class="text-center mb-3"><i class="fas fa-rocket me-2"></i>Quick Demo Access</h6>
                <div class="row text-center">
                    <div class="col-4">
                        <a asp-action="QuickLogin" asp-route-role="lecturer" class="btn btn-outline-primary btn-sm demo-btn w-100">
                            <i class="fas fa-chalkboard-teacher me-1"></i>Lecturer
                        </a>
                    </div>
                    <div class="col-4">
                        <a asp-action="QuickLogin" asp-route-role="coordinator" class="btn btn-outline-success btn-sm demo-btn w-100">
                            <i class="fas fa-user-tie me-1"></i>Coordinator
                        </a>
                    </div>
                    <div class="col-4">
                        <a asp-action="QuickLogin" asp-route-role="manager" class="btn btn-outline-info btn-sm demo-btn w-100">
                            <i class="fas fa-user-cog me-1"></i>Manager
                        </a>
                    </div>
                </div>
                <div class="text-center mt-2">
                    <small class="text-muted">Use these buttons for quick testing</small>
                </div>
            </div>

            <!-- Demo Credentials -->
            <div class="mt-4 p-3 bg-light rounded">
                <h6 class="text-center"><i class="fas fa-info-circle me-2"></i>Demo Credentials</h6>
                <div class="row text-center small">
                    <div class="col-12 mb-2">
                        <strong>Lecturer:</strong> lecturer1 / password
                    </div>
                    <div class="col-12 mb-2">
                        <strong>Coordinator:</strong> coordinator1 / password
                    </div>
                    <div class="col-12">
                        <strong>Manager:</strong> manager1 / password
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>