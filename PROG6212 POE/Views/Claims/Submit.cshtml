@using PROG6212_POE.Models
@model ClaimViewModel
@{
    ViewData["Title"] = "Submit Claim";
}

<h1 class="mb-4">Submit New Claim</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["WarningMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Submit" method="post" enctype="multipart/form-data" id="claimForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter claim title" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the purpose of this claim"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="HoursWorked" class="form-label fw-bold"></label>
                        <input asp-for="HoursWorked" type="number" step="0.1" class="form-control" id="hoursWorked" />
                        <span asp-validation-for="HoursWorked" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="HourlyRate" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">R</span>
                            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" id="hourlyRate" />
                        </div>
                        <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <!-- Enhanced real-time calculation display -->
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-calculator me-2"></i>Automated Calculation</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Total Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input type="text" class="form-control bg-light fw-bold fs-5" id="totalAmount" readonly value="0.00" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Estimated Processing</label>
                            <div id="processingEstimate" class="text-muted small mt-2">
                                Enter hours and rate to see processing details
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label fw-bold"></label>
                <input asp-for="Date" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label fw-bold"></label>
                <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any additional notes..."></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Document" class="form-label fw-bold"></label>
                <input asp-for="Document" type="file" class="form-control" id="documentUpload"
                       accept=".pdf,.docx,.xlsx,.jpg,.png" />
                <div class="form-text">Supported formats: PDF, DOCX, XLSX, JPG, PNG (Max: 5MB)</div>
                <span asp-validation-for="Document" class="text-danger small"></span>
                <div id="fileName" class="mt-2 text-muted small"></div>
                <div id="fileValidation" class="mt-1 small"></div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                <button type="submit" class="btn btn-success btn-lg" id="submitButton">
                    <i class="fas fa-paper-plane me-2"></i>Submit Claim
                </button>
            </div>
        </form>
    </div>

    <!-- Automation Information Panel -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="fas fa-robot me-2"></i>Automation Features</h6>
            </div>
            <div class="card-body">
                <h6>Real-time Calculations</h6>
                <p class="small">Total amount is automatically calculated as you type</p>

                <h6>Smart Validation</h6>
                <p class="small">System checks for duplicates and business rules</p>

                <h6>Automated Workflow</h6>
                <p class="small">Claims are automatically routed to appropriate approvers</p>

                <h6>Instant Notifications</h6>
                <p class="small">Coordinators are notified immediately upon submission</p>

                <div class="alert alert-info mt-3 small">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Tip:</strong> Claims under R500 may be auto-approved!
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enhanced real-time calculation with processing estimates
        function calculateTotal() {
            const hours = parseFloat(document.getElementById('hoursWorked').value) || 0;
            const rate = parseFloat(document.getElementById('hourlyRate').value) || 0;
            const total = hours * rate;

            document.getElementById('totalAmount').value = total.toFixed(2);

            // Update processing estimate
            const estimateElement = document.getElementById('processingEstimate');
            if (total > 0) {
                let estimateText = '';
                if (total <= 300) {
                    estimateText = '<span class="text-success"><i class="fas fa-bolt me-1"></i>Fast-track eligible (Auto-approval possible)</span>';
                } else if (total <= 1000) {
                    estimateText = '<span class="text-warning"><i class="fas fa-user-tie me-1"></i>Requires Coordinator approval</span>';
                } else {
                    estimateText = '<span class="text-info"><i class="fas fa-user-cog me-1"></i>Requires Manager approval</span>';
                }
                estimateElement.innerHTML = estimateText;
            } else {
                estimateElement.innerHTML = 'Enter hours and rate to see processing details';
            }
        }

        document.getElementById('hoursWorked').addEventListener('input', calculateTotal);
        document.getElementById('hourlyRate').addEventListener('input', calculateTotal);

        // Enhanced file validation
        document.getElementById('documentUpload').addEventListener('change', function(e) {
            const file = this.files[0];
            const fileNameElement = document.getElementById('fileName');
            const validationElement = document.getElementById('fileValidation');

            if (file) {
                fileNameElement.textContent = `Selected file: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;

                // File validation feedback
                if (file.size > 5 * 1024 * 1024) {
                    validationElement.innerHTML = '<span class="text-danger"><i class="fas fa-exclamation-triangle me-1"></i>File too large (max 5MB)</span>';
                } else {
                    validationElement.innerHTML = '<span class="text-success"><i class="fas fa-check me-1"></i>File valid</span>';
                }
            } else {
                fileNameElement.textContent = 'No file chosen';
                validationElement.innerHTML = '';
            }
        });

        // Enhanced form submission handling
        document.getElementById('claimForm').addEventListener('submit', function(e) {
            const submitButton = document.getElementById('submitButton');
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';

            // Show processing message
            const processingMessage = document.createElement('div');
            processingMessage.className = 'alert alert-info mt-3';
            processingMessage.innerHTML = '<i class="fas fa-sync fa-spin me-2"></i>Automated validation and processing in progress...';
            this.appendChild(processingMessage);
        });

        // Initialize calculation on page load
        calculateTotal();
    </script>
}